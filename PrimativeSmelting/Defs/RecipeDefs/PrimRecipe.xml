<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <RecipeDef>
    <defName>ReducedExtractMetalFromSlag</defName>
    <label>smelt metal from slag</label>
    <description>Use heat and stone tools to crudely extract a small amount of useful metal from slag chunks.</description>
    <jobString>Smelting metal from slag.</jobString>
    <workAmount>1200</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ChunkSlagSteel</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <Steel>5</Steel>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ChunkSlagSteel</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>
 
</Defs>