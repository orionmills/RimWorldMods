  <ThingDef ParentName="BaseBullet"> 
    <defName>OrioM_Bullet_PlagueGun</defName>
	<thingClass>OrioM_SickGun.Projectile_PlagueBullet</thingClass> <!--Projectile_SickBullet.cs -->
    <label>Plague Dart</label>
    <graphicData>
      <texPath>Things/Projectile/DartSmall</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>1</damageAmountBase>
      <stoppingPower>1</stoppingPower>
      <speed>55</speed>
    </projectile>
	<modExtensions>
		<li Class="OrioM_SickGun.ModExtension_SickBullet">  <!--55% chance to apply plague hediff -->
			<addHediffChance>0.55</addHediffChance>
			<hediffToAdd>Plague</hediffToAdd>
		</li>
	</modExtensions>
  </ThingDef>
