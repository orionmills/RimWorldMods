<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>OrioM_Sens_Pill</defName>
    <label>Sensory Mechanite Pill</label>
    <description>A pill which induces a mutated strain of semi-coherent mechanites which reside in the nervous system. They enhance the victim's senses, but also cause intense pain.</description>
    <descriptionHyperlinks><HediffDef>SensoryMechanites</HediffDef></descriptionHyperlinks>
    <graphicData>
      <texPath>Things/Item/Drug/senspill</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>600</WorkToMake>
      <MarketValue>18</MarketValue>
      <Mass>0.005</Mass>
      <Flammability>0.7</Flammability>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <drugCategory>Medical</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>SensoryMechanites</hediffDef> <!--Apply Sensory Mechanites hediff -->
          <severity>0.25</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Neutroamine>2</Neutroamine>
	  <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
	<tradeability>None</tradeability>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1000</listOrder>
        <overdoseSeverityOffset>0.08~0.14</overdoseSeverityOffset>
      </li>
    </comps>
  </ThingDef>
